<h1> My tasks </h1>
<ul class="tasks-list">
  <% @tasks.each do |task| %>
    <li>
    <% if task.completed == true %>
      <i class="fa-regular fa-square-check"></i>
    <% else %>
      <i class="fa-regular fa-square"></i>
    <% end %>   
    <%= link_to task['title'], task_path(task['id']) %>
    <%= link_to task_path(task['id']), method: :delete, data: { confirm: "Are you sure to delete #{task.title}?" } do %>
      <i class="fa-regular fa-trash-can"></i>
    <% end %>   
    </li>             
  <% end %>
</ul>

<p> <%= link_to "+ Add a new task", new_task_path %> </p>
