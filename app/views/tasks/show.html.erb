<h1><%= @task['title'] %></h1>

<p class="alert alert-secondary" ><%= @task['details'] %></p>

<% if @task['completed'] == true %>
<p><i class="fa-regular fa-square-check"></i> <%= " this task is completed !" %></p>
<% else %>
<p><i class="fa-regular fa-square"></i><%= " this task is to be done !" %></p>
<% end %>

<p class="btn btn-success"> <%= link_to "Edit the task", edit_task_path %> </p>

<p class="btn btn-primary"> <%= link_to "Back to list", tasks_path %> </p>